<h3>Add a contact here</h3>

<form action="/contacts" method="post">
  <label for="first_name">first name:</label>
  <input id="first_name" name="first_name" class="form-control" type="text">
  <label for="last_name">last name:</label>
  <input id="last_name" name="last_name" class="form-control" type="text">
  <label for="job_title">job title:</label>
  <input id="job_title" name="job_title" class="form-control" type="text">
  <label for="company">company:</label>
  <input id="company" name="company" class="form-control" type="text">

  <hr>
  <button type="submit" class="btn btn-success">Add Info</button>
</form>
